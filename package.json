{
  "name": "curso-dev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run services:up && pnpm run wait-for-postgres && pnpm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "build": "next build",
    "test": "vitest",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "migration:create": "./node_modules/.bin/node-pg-migrate -m infra/migrations create",
    "migration:up": "./node_modules/.bin/node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:stop": "./node_modules/.bin/node-pg-migrate -m infra/migrations --envPath .env.development stop",
    "migration:down": "./node_modules/.bin/node-pg-migrate -m infra/migrations --envPath .env.development down",
    "wait-for-postgres": "npx -y tsx infra/scripts/wait-for-postgres.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "dotenv-expand": "^12.0.1",
    "next": "15.0.3",
    "pg": "^8.13.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/node": "22.9.0",
    "@types/pg": "^8.11.10",
    "@types/react": "18.3.12",
    "@vitejs/plugin-react": "^4.3.3",
    "jsdom": "^25.0.1",
    "node-pg-migrate": "^7.8.0",
    "prettier": "^3.3.3",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.5"
  },
  "packageManager": "pnpm@9.7.0+sha512.dc09430156b427f5ecfc79888899e1c39d2d690f004be70e05230b72cb173d96839587545d09429b55ac3c429c801b4dc3c0e002f653830a420fa2dd4e3cf9cf"
}
